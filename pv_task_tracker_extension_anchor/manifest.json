{
  "manifest_version": 3,
  "name": "Prime Video Task Tracker",
  "version": "1.0",
  "permissions": [
    "storage",
    "idle"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}